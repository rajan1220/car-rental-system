<%- include('../partials/header') %>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card border-0 shadow-sm text-center">
        <div class="card-body p-5">
          <div class="mb-4">
            <i class="fas fa-check-circle text-success" style="font-size: 5rem;"></i>
          </div>
          <h1 class="display-5 fw-bold mb-3">Booking Confirmed!</h1>
          <p class="lead mb-4">Thank you for your reservation. We've sent a confirmation email with all the details.</p>
          
          <div class="card border mb-4">
            <div class="card-body text-start">
              <h2 class="h5 fw-bold mb-3">Booking Details</h2>
              <div class="row mb-3">
                <div class="col-md-6">
                  <p class="mb-1"><strong>Booking ID:</strong> <%= booking._id %></p>
                  <p class="mb-1"><strong>Vehicle:</strong> <%= booking.car.make %> <%= booking.car.model %></p>
                </div>
                <div class="col-md-6">
                  <p class="mb-1"><strong>Pickup Date:</strong> <%= new Date(booking.pickupDate).toLocaleDateString() %></p>
                  <p class="mb-1"><strong>Return Date:</strong> <%= new Date(booking.returnDate).toLocaleDateString() %></p>
                </div>
              </div>
              <hr>
              <div class="d-flex justify-content-between fw-bold fs-5">
                <span>Total Amount:</span>
                <span>$<%= booking.totalPrice %></span>
              </div>
            </div>
          </div>
          
          <div class="d-flex justify-content-center gap-3">
            <a href="/cars/<%= booking.car._id %>" class="btn btn-outline-primary px-4">
              <i class="fas fa-car me-2"></i>View Vehicle
            </a>
            <a href="/bookings/<%= booking._id %>" class="btn btn-primary px-4">
              <i class="fas fa-receipt me-2"></i>View Booking
            </a>
          </div>
          
          <div class="mt-5">
            <h2 class="h5 fw-bold mb-3">What's Next?</h2>
            <div class="row text-start">
              <div class="col-md-4 mb-3">
                <div class="d-flex">
                  <div class="me-3 text-primary">
                    <i class="fas fa-envelope fa-2x"></i>
                  </div>
                  <div>
                    <h3 class="h6 fw-bold">Email Confirmation</h3>
                    <p class="small">Check your email for booking details and receipt.</p>
                  </div>
                </div>
              </div>
              <div class="col-md-4 mb-3">
                <div class="d-flex">
                  <div class="me-3 text-primary">
                    <i class="fas fa-map-marker-alt fa-2x"></i>
                  </div>
                  <div>
                    <h3 class="h6 fw-bold">Pickup Location</h3>
                    <p class="small">123 Rental St, Your City - Open 24/7</p>
                  </div>
                </div>
              </div>
              <div class="col-md-4 mb-3">
                <div class="d-flex">
                  <div class="me-3 text-primary">
                    <i class="fas fa-phone-alt fa-2x"></i>
                  </div>
                  <div>
                    <h3 class="h6 fw-bold">Need Help?</h3>
                    <p class="small">Call us at <a href="tel:+18005551234">1-800-555-1234</a></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>