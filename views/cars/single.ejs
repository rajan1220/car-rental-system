<%- include('../partials/header') %>

<!-- Custom CSS -->
<style>
  :root {
    --primary: #4361ee;
    --primary-dark: #3a0ca3;
    --secondary: #f72585;
    --light: #f8f9fa;
    --dark: #212529;
    --gray: #6c757d;
    --light-gray: #e9ecef;
  }
  
  body {
    background-color: #f5f7fa;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    color: var(--dark);
  }
  
  /* Hero Section */
  .car-hero {
    position: relative;
    overflow: hidden;
    border-radius: 16px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.08);
    margin-bottom: 2rem;
  }
  
  .car-hero-image {
    height: 500px;
    object-fit: cover;
    width: 100%;
  }
  
  .car-hero-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);
    padding: 2rem;
    color: white;
  }
  
  /* Main Content */
  .car-title {
    font-weight: 800;
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }
  
  .car-subtitle {
    color: var(--gray);
    font-weight: 500;
    margin-bottom: 1.5rem;
  }
  
  .price-badge {
    background: linear-gradient(135deg, var(--primary), var(--primary-dark));
    color: white;
    padding: 0.75rem 2rem;
    border-radius: 50px;
    font-weight: 700;
    font-size: 1.5rem;
    display: inline-block;
    box-shadow: 0 10px 20px rgba(67, 97, 238, 0.3);
  }
  
  /* Specs Grid */
  .specs-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 1rem;
    margin: 2rem 0;
  }
  
  .spec-card {
    background: white;
    border-radius: 12px;
    padding: 1.5rem;
    box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    text-align: center;
    transition: transform 0.3s;
  }
  
  .spec-card:hover {
    transform: translateY(-5px);
  }
  
  .spec-icon {
    font-size: 2rem;
    color: var(--primary);
    margin-bottom: 1rem;
  }
  
  .spec-value {
    font-weight: 700;
    font-size: 1.25rem;
    margin-bottom: 0.25rem;
  }
  
  .spec-label {
    color: var(--gray);
    font-size: 0.9rem;
  }
  
  /* Features Section */
  .features-section {
    background: white;
    border-radius: 16px;
    padding: 2rem;
    box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    margin: 2rem 0;
  }
  
  .feature-item {
    display: flex;
    align-items: center;
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--light-gray);
  }
  
  .feature-item:last-child {
    border-bottom: none;
  }
  
  .feature-icon {
    width: 40px;
    height: 40px;
    background: rgba(67, 97, 238, 0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 1rem;
    color: var(--primary);
  }
  
  /* Booking Card */
  .booking-card {
    background: white;
    border-radius: 16px;
    padding: 2rem;
    box-shadow: 0 10px 30px rgba(0,0,0,0.08);
    position: sticky;
    top: 2rem;
  }
  
  .booking-btn {
    background: linear-gradient(135deg, var(--primary), var(--primary-dark));
    border: none;
    padding: 1rem;
    font-weight: 700;
    font-size: 1.1rem;
    width: 100%;
    border-radius: 12px;
    color: white;
    margin: 1.5rem 0;
    transition: transform 0.3s, box-shadow 0.3s;
  }
  
  .booking-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 15px 30px rgba(67, 97, 238, 0.4);
  }
  
  .price-breakdown {
    background: var(--light);
    border-radius: 12px;
    padding: 1.5rem;
    margin: 1.5rem 0;
  }
  
  .price-row {
    display: flex;
    justify-content: space-between;
    padding: 0.5rem 0;
  }
  
  /* Similar Cars */
  .similar-car-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    transition: transform 0.3s;
    margin-bottom: 1.5rem;
  }
  
  .similar-car-card:hover {
    transform: translateY(-5px);
  }
  
  .similar-car-image {
    height: 180px;
    object-fit: cover;
    width: 100%;
  }
  
  /* Responsive Adjustments */
  @media (max-width: 992px) {
    .car-hero-image {
      height: 400px;
    }
    
    .car-title {
      font-size: 2rem;
    }
  }
  
  @media (max-width: 768px) {
    .car-hero-image {
      height: 300px;
    }
    
    .specs-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 576px) {
    .car-hero-image {
      height: 250px;
    }
    
    .car-title {
      font-size: 1.75rem;
    }
    
    .specs-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<div class="container py-5">
  <!-- Breadcrumb Navigation -->
  <nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb bg-transparent px-0">
      <li class="breadcrumb-item"><a href="/" class="text-decoration-none">Home</a></li>
      <li class="breadcrumb-item"><a href="/cars" class="text-decoration-none">Our Fleet</a></li>
      <li class="breadcrumb-item active" aria-current="page"><%= car.make %> <%= car.model %></li>
    </ol>
  </nav>

  <div class="row">
    <!-- Main Content Column -->
    <div class="col-lg-8">
      <!-- Car Hero Section -->
      <div class="car-hero">
        <img src="/uploads/cars/<%= car.image %>" class="car-hero-image" alt="<%= car.make %> <%= car.model %>">
        <div class="car-hero-overlay">
          <h1 class="car-title text-white"><%= car.make %> <%= car.model %></h1>
          <p class="car-subtitle text-white-50"><%= car.year %> • <%= car.type %></p>
          <div class="price-badge">$<%= car.dailyRate %>/day</div>
        </div>
      </div>
      
      <!-- Key Specifications -->
      <div class="specs-grid">
        <div class="spec-card">
          <div class="spec-icon"><i class="fas fa-users"></i></div>
          <div class="spec-value"><%= car.seats %></div>
          <div class="spec-label">Passengers</div>
        </div>
        <div class="spec-card">
          <div class="spec-icon"><i class="fas fa-suitcase"></i></div>
          <div class="spec-value"><%= car.luggage %></div>
          <div class="spec-label">Bags</div>
        </div>
        <div class="spec-card">
          <div class="spec-icon"><i class="fas fa-tachometer-alt"></i></div>
          <div class="spec-value"><%= car.transmission %></div>
          <div class="spec-label">Transmission</div>
        </div>
        <div class="spec-card">
          <div class="spec-icon"><i class="fas fa-gas-pump"></i></div>
          <div class="spec-value"><%= car.fuelType %></div>
          <div class="spec-label">Fuel Type</div>
        </div>
      </div>
      
      <!-- Description -->
      <div class="features-section">
        <h2 class="mb-4">Vehicle Description</h2>
        <p><%= car.description || `The ${car.make} ${car.model} is a premium ${car.type.toLowerCase()} that combines comfort, style, and performance. Perfect for both city driving and long road trips, this vehicle offers a smooth ride with all the modern amenities you need for a pleasant journey.` %></p>
      </div>
      
      <!-- Features & Amenities -->
      <div class="features-section">
        <h2 class="mb-4">Features & Amenities</h2>
        <% const features = car.features || ['Bluetooth Connectivity', 'GPS Navigation', 'Keyless Entry', 'Backup Camera', 'USB Ports', 'Heated Seats', 'Sunroof', 'Premium Sound System']; %>
        <% features.forEach(feature => { %>
          <div class="feature-item">
            <div class="feature-icon">
              <i class="fas fa-check"></i>
            </div>
            <div><%= feature %></div>
          </div>
        <% }); %>
      </div>
      
      <!-- Technical Specifications -->
      <div class="features-section">
        <h2 class="mb-4">Technical Specifications</h2>
        <div class="table-responsive">
          <table class="table">
            <tbody>
              <tr>
                <th scope="row">Vehicle Type</th>
                <td><%= car.type %></td>
              </tr>
              <tr>
                <th scope="row">Engine</th>
                <td><%= car.engine || '2.0L 4-cylinder' %></td>
              </tr>
              <tr>
                <th scope="row">Horsepower</th>
                <td><%= car.horsepower || '180 hp' %></td>
              </tr>
              <tr>
                <th scope="row">Fuel Economy</th>
                <td><%= car.mpg || '12 kmpl city / 16 kmpl highway' %></td>
              </tr>
              <tr>
                <th scope="row">Air Conditioning</th>
                <td><%= car.aircon ? 'Yes' : 'No' %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      
      <!-- Similar Vehicles -->
      <div class="features-section">
        <h2 class="mb-4">Similar Vehicles</h2>
        <div class="row">
          <% if (typeof similarCars !== 'undefined' && similarCars.length > 0) { %>
            <% similarCars.forEach(function(car) { %>
              <div class="col-md-6">
                <div class="similar-car-card">
                  <img src="/uploads/cars/<%= car.image %>" class="similar-car-image" alt="<%= car.make %> <%= car.model %>">
                  <div class="p-3">
                    <h5 class="mb-1"><%= car.make %> <%= car.model %></h5>
                    <p class="text-muted small mb-2"><%= car.type %> • <%= car.transmission %></p>
                    <div class="d-flex justify-content-between align-items-center">
                      <span class="fw-bold text-primary">$<%= car.dailyRate %>/day</span>
                      <a href="/cars/<%= car._id %>" class="btn btn-sm btn-outline-primary">View</a>
                    </div>
                  </div>
                </div>
              </div>
            <% }); %>
          <% } else { %>
            <div class="col-12">
              <div class="alert alert-info text-center py-3">
                No similar vehicles available at this time
              </div>
            </div>
          <% } %>
        </div>
      </div>
    </div>
    
    <!-- Booking Sidebar -->
    <div class="col-lg-4">
      <div class="booking-card">
        <h2 class="mb-4">Book This Vehicle</h2>
        
        <a href="/bookings/new/<%= car._id %>" class="btn btn-primary btn-lg w-100">
          <i class="fas fa-calendar-check me-2"></i> Book Now
        </a>
        
        <!-- Pricing Breakdown -->
        <div class="price-breakdown">
          <h3 class="h5 mb-3">Pricing Breakdown</h3>
          <div class="price-row">
            <span>Daily Rate</span>
            <span>$<%= car.dailyRate %></span>
          </div>
          <div class="price-row">
            <span>Taxes & Fees</span>
            <span>$50</span>
          </div>
          <hr>
          <div class="price-row fw-bold">
            <span>Estimated Total</span>
            <span>$<%= parseInt(car.dailyRate) + 50 %>/day</span>
          </div>
        </div>
        
        <!-- Rental Terms -->
        <div class="alert alert-light">
          <h3 class="h5 mb-3">Rental Terms</h3>
          <ul class="list-unstyled">
            <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Minimum 1 day rental</li>
            <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Free cancellation</li>
            <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Unlimited mileage</li>
            <li><i class="fas fa-check text-success me-2"></i> 24/7 Roadside assistance</li>
          </ul>
        </div>
        
        <!-- Safety Info -->
        <div class="alert alert-primary">
          <div class="d-flex">
            <i class="fas fa-shield-alt fa-2x me-3"></i>
            <div>
              <h3 class="h5 mb-2">Enhanced Safety</h3>
              <p class="small mb-0">All vehicles are thoroughly cleaned and sanitized between rentals.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>