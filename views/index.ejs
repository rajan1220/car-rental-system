<!-- Featured Cars Section with 3D Effect -->
<section id="featured" class="featured-cars py-10 bg-light ">
  <div class="container">
    <div class="section-header text-center mb-5 mt-5 animate__animated animate__fadeIn">
      <h2 class="section-title position-relative d-inline-block fw-bold mb-3">
        <span class="highlight-text bg-primary text-white px-3 py-1 rounded-pill">Featured</span> Vehicles
      </h2>
      <p class="section-subtitle text-muted fs-5">Discover our premium collection of exclusive rentals</p>
    </div>
    
    <div class="swiper featured-swiper pb-5 d-flex ">
      <div class="swiper-wrapper">
        <% if (cars.length > 0) { %>
          <% cars.forEach(car => { %>
            <div class="swiper-slide">
              <div class="car-card h-100 bg-white rounded-4 overflow-hidden shadow-sm transition-all hover:shadow-lg">
                <div class="car-badge bg-primary text-white fw-bold px-3 py-2 rounded-end">
                  <span class="rupee-symbol"><%= car.dailyRate %></span>/day
                </div>
                <div class="car-media position-relative">
                  <img src="/uploads/cars/<%= car.image %>" alt="<%= car.make %> <%= car.model %>" class="img-fluid w-100" style="height: 220px; object-fit: cover;">
                  <div class="car-overlay position-absolute top-0 start-0 w-100 h-100 d-flex flex-column justify-content-end p-4 bg-gradient-to-t from-dark">
                    <a href="/cars/<%= car._id %>" class="btn btn-primary btn-sm rounded-pill align-self-start mb-3 px-4">
                      <i class="fas fa-eye me-2"></i>View Details
                    </a>
                    <div class="quick-specs d-flex gap-3">
                      <span class="text-white small"><i class="fas fa-users me-1"></i> <%= car.seats %></span>
                      <span class="text-white small"><i class="fas fa-cog me-1"></i> <%= car.transmission %></span>
                      <span class="text-white small"><i class="fas fa-gas-pump me-1"></i> <%= car.fuelType %></span>
                    </div>
                  </div>
                </div>
                <div class="car-body p-4">
                  <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                      <h3 class="h5 fw-bold mb-1"><%= car.make %> <%= car.model %></h3>
                      <span class="badge bg-light text-dark rounded-pill"><%= car.type %></span>
                    </div>
                    <div class="car-rating text-warning">
                      <% const rating = car.averageRating || 0; %>
                      <% for(let i = 1; i <= 5; i++) { %>
                        <% if(i <= rating) { %>
                          <i class="fas fa-star"></i>
                        <% } else if(i === Math.ceil(rating) && rating % 1 > 0) { %>
                          <i class="fas fa-star-half-alt"></i>
                        <% } else { %>
                          <i class="far fa-star"></i>
                        <% } %>
                      <% } %>
                      <span class="text-muted small ms-1">(<%= car.reviewsCount || 0 %>)</span>
                    </div>
                  </div>
                  
                  <div class="d-flex justify-content-between align-items-center pt-2">
                    <div>
                      <span class="text-primary fw-bold fs-5 rupee-symbol"><%= car.dailyRate %></span>
                      <span class="text-muted small"> / day</span>
                    </div>
                    <a href="/cars/<%= car._id %>" class="btn btn-sm btn-outline-primary">
                      <i class="fas fa-arrow-right">Book</i>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          <% }); %>
        <% } else { %>
          <div class="col-12 text-center py-5">
            <div class="icon-lg text-muted mb-3" style="font-size: 3rem;">
              <i class="fas fa-car-side"></i>
            </div>
            <h4 class="mb-2 fw-bold">Our Fleet is Being Updated</h4>
            <p class="text-muted mb-4">We're preparing some amazing vehicles for you</p>
            <a href="/contact" class="btn btn-primary rounded-pill px-4">
              <i class="fas fa-phone-alt me-2"></i>Contact Us
            </a>
          </div>
        <% } %>
      </div>
      <div class="swiper-pagination mt-4"></div>
      <div class="swiper-button-next bg-white rounded-circle shadow-sm"></div>
      <div class="swiper-button-prev bg-white rounded-circle shadow-sm"></div>
    </div>
  </div>
</section>

