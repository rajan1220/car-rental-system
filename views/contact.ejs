<%- include('partials/header') %>

<div class="container my-5">
  <div class="row">
    <div class="col-lg-6 mb-4 mb-lg-0">
      <h1 class="display-4 fw-bold mb-4">Contact Us</h1>
      
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
          <h2 class="h4 fw-bold">Get in Touch</h2>
          <form>
            <div class="mb-3">
              <label for="name" class="form-label">Your Name</label>
              <input type="text" class="form-control" id="name" required>
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email Address</label>
              <input type="email" class="form-control" id="email" required>
            </div>
            <div class="mb-3">
              <label for="subject" class="form-label">Subject</label>
              <input type="text" class="form-control" id="subject" required>
            </div>
            <div class="mb-3">
              <label for="message" class="form-label">Message</label>
              <textarea class="form-control" id="message" rows="5" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Send Message</button>
          </form>
        </div>
      </div>
    </div>

    <div class="col-lg-6">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body">
          <h2 class="h4 fw-bold">Our Location</h2>
          <div class="mb-4">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3022.215209179054!2d-73.9878449245255!3d40.7484404713896!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c259a9b3117469%3A0xd134e199a405a163!2sEmpire%20State%20Building!5e0!3m2!1sen!2sus!4v1689870587292!5m2!1sen!2sus" 
              width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
          </div>
          
          <h2 class="h4 fw-bold">Contact Information</h2>
          <ul class="list-unstyled">
            <li class="mb-2"><i class="fas fa-map-marker-alt me-2"></i> 123 Rental St, New York, NY 10001</li>
            <li class="mb-2"><i class="fas fa-phone me-2"></i> (123) 456-7890</li>
            <li class="mb-2"><i class="fas fa-envelope me-2"></i> info@driveease.com</li>
            <li><i class="fas fa-clock me-2"></i> Mon-Fri: 9AM - 6PM</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>