<%- include('partials/sidebar', {currentPage: 'vehicles'}) %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="/css/admin-dashboard.css">
<link rel="stylesheet" href="css/style.css">
<div class="main-content">
  <div class="container-fluid px-4">
    <!-- Page Header -->
    <div class="page-header py-3 mb-4">
      <h1 class="page-title mb-0">
        <i class="fas fa-car me-2"></i> Add New Vehicle
      </h1>
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
          <li class="breadcrumb-item"><a href="/admin/vehicles">Vehicles</a></li>
          <li class="breadcrumb-item active">Add Vehicle</li>
        </ol>
      </nav>
    </div>

    <!-- Add Vehicle Form -->
    <div class="card shadow-sm mb-4">
      <div class="card-body">
        <form action="/admin/vehicles/add" method="POST">
          <div class="row g-3">
            <!-- Basic Information -->
            <div class="col-md-6">
              <div class="mb-3">
                <label for="make" class="form-label">Make</label>
                <input type="text" class="form-control" id="make" name="make" required>
              </div>
            </div>
            <div class="col-md-6">
              <div class="mb-3">
                <label for="model" class="form-label">Model</label>
                <input type="text" class="form-control" id="model" name="model" required>
              </div>
            </div>
            <div class="col-md-4">
              <div class="mb-3">
                <label for="year" class="form-label">Year</label>
                <input type="number" class="form-control" id="year" name="year" min="2000" max="<%= new Date().getFullYear() + 1 %>" required>
              </div>
            </div>
            <div class="col-md-4">
              <div class="mb-3">
                <label for="type" class="form-label">Vehicle Type</label>
                <select class="form-select" id="type" name="type" required>
                  <option value="">Select Type</option>
                  <option value="Sedan">Sedan</option>
                  <option value="SUV">SUV</option>
                  <option value="Truck">Truck</option>
                  <option value="Van/Minivan">Van/Minivan</option>
                  <option value="Electric">Electric</option>
                </select>
              </div>
            </div>
            <div class="col-md-4">
              <div class="mb-3">
                <label for="seats" class="form-label">Seats</label>
                <input type="number" class="form-control" id="seats" name="seats" min="1" max="15" required>
              </div>
            </div>

            <!-- Pricing & Specs -->
            <div class="col-md-4">
              <div class="mb-3">
                <label for="dailyRate" class="form-label">Daily Rate (â‚¹)</label>
                <input type="number" class="form-control" id="dailyRate" name="dailyRate" min="0" step="0.01" required>
              </div>
            </div>
            <div class="col-md-4">
              <div class="mb-3">
                <label for="transmission" class="form-label">Transmission</label>
                <select class="form-select" id="transmission" name="transmission" required>
                  <option value="">Select Transmission</option>
                  <option value="Automatic">Automatic</option>
                  <option value="Manual">Manual</option>
                </select>
              </div>
            </div>
            <div class="col-md-4">
              <div class="mb-3">
                <label for="fuelType" class="form-label">Fuel Type</label>
                <select class="form-select" id="fuelType" name="fuelType" required>
                  <option value="">Select Fuel Type</option>
                  <option value="Gasoline">Gasoline</option>
                  <option value="Diesel">Diesel</option>
                  <option value="Electric">Electric</option>
                  <option value="Hybrid">Hybrid</option>
                </select>
              </div>
            </div>

            <!-- Image Upload (if needed) -->
            <div class="col-12">
              <div class="mb-3">
                <label for="image" class="form-label">Vehicle Image</label>
                <input type="file" class="form-control" id="image" name="image" accept="image/*">
              </div>
            </div>

            <!-- Form Actions -->
            <div class="col-12">
              <div class="d-flex justify-content-end gap-2">
                <a href="/admin/vehicles" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">Add Vehicle</button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<style>
  .main-content {
    margin-left: 250px;
    padding: 20px;
    min-height: 100vh;
    background-color: #f8f9fa;
  }

  @media (max-width: 992px) {
    .main-content {
      margin-left: 0;
    }
  }

  .page-header {
    border-bottom: 1px solid #dee2e6;
    padding-bottom: 1rem;
  }

  .page-title {
    font-size: 1.75rem;
    font-weight: 600;
  }
</style>