<% function getStatusBadgeClass(status) {
  if (!status) return 'bg-secondary';
  
  switch (status.toLowerCase()) {
    case 'confirmed': return 'bg-success bg-opacity-10 text-success';
    case 'pending': return 'bg-warning bg-opacity-10 text-warning';
    case 'rejected':
    case 'cancelled': return 'bg-danger bg-opacity-10 text-danger';
    case 'completed': return 'bg-info bg-opacity-10 text-info';
    default: return 'bg-secondary bg-opacity-10 text-secondary';
  }
} %>

<% function getActivityIconClass(type) {
  switch (type) {
    case 'booking': return 'bg-success-light text-success';
    case 'car': return 'bg-primary-light text-primary';
    case 'user': return 'bg-warning-light text-warning';
    default: return 'bg-secondary-light text-secondary';
  }
} %>

